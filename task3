# Task 03 - Password Strength Checker
# Developed by: Laya Sai

import re

def check_password_strength(password):
    strength = 0
    remarks = ""

    # Criteria checks
    if len(password) >= 8:
        strength += 1
    if re.search(r"[A-Z]", password):
        strength += 1
    if re.search(r"[a-z]", password):
        strength += 1
    if re.search(r"[0-9]", password):
        strength += 1
    if re.search(r"[@$!%*?&^#]", password):
        strength += 1

    # Remarks based on strength
    if strength == 5:
        remarks = "Strong Password ðŸ’ª"
    elif strength >= 3:
        remarks = "Moderate Password ðŸ™‚ (Consider adding more variety)"
    else:
        remarks = "Weak Password âš  (Use uppercase, lowercase, numbers & special characters)"

    return strength, remarks


# Example usage
if _name_ == "_main_":
    password = input("Enter your password: ")
    strength, remarks = check_password_strength(password)
    print(f"Password Strength Score: {strength}/5")
    print(f"Remarks: {remarks}")
